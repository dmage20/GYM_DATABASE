    <% if !@hours.blank? %>
      <table class="table table-sm">
  <thead>
  </thead>
  <tbody>
    <% @hours.each do |thing| %>
    <tr>
      <th scope="row" style="
    width: 103px;"><%= thing.partition(":").first %></th>
      <td><%= thing.partition(":").third.delete(' ') %></td>
    </tr>
    <% end %>
  </tbody>
</table>

    <% end %>
  </div>
<% end %>

