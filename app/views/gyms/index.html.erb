<div class="main-container">
  <div class="container">
      <%= form_tag gyms_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a gym"
      %>
    <% end %>

  <div class="cards-container">
      <%= render 'components/cards' %>
  </div>
  </div>
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  ></div>
</div>
